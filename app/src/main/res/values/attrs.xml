<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ProgressView">
        <attr name="textProgress" format="string" />
        <attr name="textDimension" format="dimension" />
        <attr name="progress" format="float" />
        <attr name="textColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="progressShape">
            <!--圆形-->
            <enum name="round" value="0" />
            <!--矩形-->
            <enum name="rectangle" value="1" />
            <!--椭圆-->
            <enum name="oval" value="2" />
            <!--正方形-->
            <enum name="square" value="3" />
        </attr>
    </declare-styleable>
    <declare-styleable name="CustomTitlebar">
        <attr name="TitleName" format="string" />
        <attr name="TitleRightMargin" format="dimension" />
    </declare-styleable>

    <!--转圈显示三种不同的颜色-->
    <declare-styleable name="FitChart">
        <attr name="strokeSize" format="dimension|reference" />
        <attr name="valueStrokeColor" format="color|reference" />
        <attr name="backStrokeColor" format="color|reference" />
        <attr name="animationMode">
            <enum name="linear" value="0" />
            <enum name="overdraw" value="1" />
        </attr>
    </declare-styleable>
</resources>