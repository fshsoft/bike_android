<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_ad"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">

    <ImageView
        android:id="@+id/img_gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp"
        android:paddingRight="17dp"
        android:src="@mipmap/gold"/>


    <TextView
        android:id="@+id/txt_ad"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/img_enter"
        android:layout_toRightOf="@+id/img_gold"
        android:gravity="center_vertical"
        android:text="充值返利，最高可返288元！"
        android:textColor="@color/content"
        android:textSize="14dp"/>


    <ImageView
        android:id="@+id/img_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="17dp"
        android:src="@mipmap/home_ic_enter"/>
</RelativeLayout>