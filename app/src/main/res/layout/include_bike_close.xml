<LinearLayout
    android:id="@+id/ll_close_bike"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="gone">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@mipmap/place"
        android:drawablePadding="13dp"
        android:gravity="center_vertical"
        android:paddingLeft="14dp"
        android:text="徐汇区"
        android:textColor="@color/content"
        android:textSize="14dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_btn"/>

    <LinearLayout
        android:id="@+id/ll_bike_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/ll_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="0.5"
                    android:textColor="@color/orange"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/txt_money"
                    android:layout_toRightOf="@+id/txt_money"
                    android:gravity="center"
                    android:text=" 元"
                    android:textColor="@color/gray_text"
                    android:textSize="12dp"/>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_money"
                android:gravity="center"
                android:text="30分钟"
                android:textColor="@color/gray_text"
                android:textSize="15dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/ll_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="22"
                    android:textColor="@color/orange"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/txt_distance"
                    android:layout_toRightOf="@+id/txt_distance"
                    android:gravity="center"
                    android:text=" 米"
                    android:textColor="@color/gray_text"
                    android:textSize="12dp"/>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_distance"
                android:gravity="center"
                android:text="距离起始位置"
                android:textColor="@color/gray_text"
                android:textSize="15dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/ll_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/orange"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/txt_time"
                    android:layout_toRightOf="@+id/txt_time"
                    android:gravity="center"
                    android:text=" 分钟"
                    android:textColor="@color/gray_text"
                    android:textSize="12dp"/>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_time"
                android:gravity="center"
                android:text="步行可到达"
                android:textColor="@color/gray_text"
                android:textSize="15dp"/>

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_order"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:background="@color/orange"
        android:gravity="center"
        android:text="@string/register_to_user_bike"
        android:textColor="@color/white"
        android:textSize="15dp"/>


    <LinearLayout
        android:id="@+id/ll_order"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:paddingBottom="30dp"
            android:paddingLeft="14dp"
            android:id="@+id/txt_order_number"
            android:paddingTop="30dp"
            android:text="自行车编号   0216061017"
            android:textColor="@color/text"
            android:textSize="14dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/gray"
            android:paddingLeft="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="预约中"
                android:textColor="@color/orange"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:text="保留时间"
                android:textColor="@color/text"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/txt_order_timer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:text="14:50"
                android:textColor="@color/content"
                android:textSize="14dp"/>


            <TextView
                android:id="@+id/txt_order_cancel"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-100dp"
                android:gravity="center|center_vertical"
                android:text="取消预约"
                android:background="@color/orange"
                android:textColor="@color/white"
                android:textSize="14dp"/>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>